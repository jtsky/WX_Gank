.img-box {
  display: block;
  height: 100%;
}

.img-box .img-box-wrap {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.img-box .img-box-wrap .image-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.img-box .img-box-wrap .loadmore {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-bottom: 80rpx;
  margin-top: 10rpx;
}

/*引入组件样式*/
@import "column/column_img.wxss";
